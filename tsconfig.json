{
  "compilerOptions": {
    "types": ["node", "express", "jest"],
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es2016",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
